<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="das_category_menu_view_form" model="ir.ui.view">
            <field name="name">das_category_menu_view_form</field>
            <field name="model">das.category.menu</field>
            <field name="arch" type="xml">
                <form string="das_category_menu_form">

                     <sheet>
                         <group>
                            <group>
                                <field name="name" placeholder="name"/>
                                <field name="menu_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                             <group name="first" col="2">
                                <field name="parent_id" class="oe_inline"/>
                            </group>
                        </group>
                         <group>
                            <group>
                                <field name="category_menu_banner" widget="image"/>

                            </group>
                        </group>
                         <notebook>

                            <page string="Products">

                                <field name="product_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="das_category_menu_view_tree" model="ir.ui.view">
            <field name="name">das_category_menu_view_tree</field>
            <field name="model">das.category.menu</field>
            <field name="arch" type="xml">
                <tree string="das_category_menu_tree">
                    <field name="name"/>

                    <field name="menu_id"/>
                </tree>
            </field>
        </record>

        <record id="das_category_menu_tree_action" model="ir.actions.act_window">
            <field name="name">Category Menu</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">das.category.menu</field>
            <field name="view_mode">tree,form</field>
        </record>

<!--        <menuitem id="das_category_menu_menu_items" name="Category Menu" action="das_category_menu_tree_action" parent="das_template_settings.das_menu_menu_menu_item" sequence="2"/>-->

