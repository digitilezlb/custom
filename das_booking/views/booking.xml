<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="booking_view_form" model="ir.ui.view">
            <field name="name">booking_view_form</field>
            <field name="model">booking.booking</field>
            <field name="arch" type="xml">
                <form string="booking_view_form" >

                     <sheet>
                         <group>
                             <group>
                                <field name="name"/>
                                <field name="nb_people"/>
                                <field name="the_date"/>
<!--                                <field name="the_time" widget="datetime_time"/>-->
                                 <field name="delivery_time" widget="float_time"/>
                                <field name="comments"/>
                                 <field name="company_id"/>

                            </group>

                        </group>


                    </sheet>
                </form>
            </field>
        </record>



        <record id="booking_view_tree" model="ir.ui.view">
            <field name="name">booking_view_tree</field>
            <field name="model">booking.booking</field>
            <field name="arch" type="xml">
                <tree string="booking_tree">

                    <field name="name"/>
                    <field name="nb_people"/>
                    <field name="the_date"/>
                    <field name="delivery_time"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="booking_action" model="ir.actions.act_window">
            <field name="name">Booking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">booking.booking</field>
              <!--<field name="res_id">1</field>-->

            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="booking_menu_items" name="Booking" action="booking_action"   />


    </data>
</odoo>