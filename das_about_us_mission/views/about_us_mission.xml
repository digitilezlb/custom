<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="about_us_mission_view_form" model="ir.ui.view">
            <field name="name">about_us_mission_view_form</field>
            <field name="model">about.us.mission</field>
            <field name="arch" type="xml">
                <form string="about_us_mission_view_form" >

                     <sheet>
                         <group>
                             <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="company_id"/>

                            </group>
                            <group>

                                <field name="about_us_mission_image"  widget='image' />
                            </group>
                        </group>



                    </sheet>
                </form>
            </field>
        </record>



        <record id="about_us_mission_view_tree" model="ir.ui.view">
            <field name="name">about_us_mission_view_tree</field>
            <field name="model">about.us.mission</field>
            <field name="arch" type="xml">
                <tree string="about_us_mission_tree" >
                    <field name="name"/>
                    <field name="description"/>
                    <field name="company_id"/>


                </tree>
            </field>
        </record>


        <record id="about_us_mission_action" model="ir.actions.act_window">
            <field name="name">About Us Mission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">about.us.mission</field>
              <!--<field name="res_id">1</field>-->
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="about_us_mission_menu_items" name="About Us Mission" action="about_us_mission_action" parent="das_template_settings.about_us_menu_item" sequence="2" />

<!--        <menuitem id="taste_the_difference_menu_items" name="Taste The Difference" action="taste_the_differences_tree_action"-->
<!--                  web_icon=""/>-->








    </data>
</odoo>