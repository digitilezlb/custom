<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id='trip_wizard' model='ir.ui.view'>
            <field name="name">wizard.trip.wizard</field>
            <field name='model'>trip.wizard</field>
            <field name='arch' type='xml'>
                <form>
                    <group>
                        <field name='driver_id'/>
                        <field name='vehicle_id' domain="[('driver_id', '=', driver_id)]"/>
                    </group>

                    <footer>
                        <button type='object' name='action_confirm' string='Confirm'/>
                        <button name="cancel" string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>