        <record id="trips_view_tree" model="ir.ui.view">
            <field name="name">trips_view_tree</field>
            <field name="model">orders.trip</field>
            <field name="arch" type="xml">
                <tree string="trips_tree">
                    <field name="name"/>


                </tree>
            </field>
        </record>


        <record id="wizard_trip_assign" model="ir.ui.view">
            <field name="name">invoices_view_tree</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0">
                    <header>
                        <button string="Create Trip" type="object" name="create_trip"/>
                    </header>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="invoice_partner_shipping_id_display_name"/>
                    <field name="zone_id"/>
                </tree>
            </field>
        </record>

        <record id="assign_trip_action" model="ir.actions.act_window">
            <field name="name">Assign Trip</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move</field>
            <field name="view_id" ref="wizard_trip_assign"/>
            <field name="domain">[('move_type', '=', 'out_invoice'),('is_delivered', '=', False)]</field>
            <field name="view_mode">tree</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="assign_trip" name="Assign Trip" parent="orders_trip.order_trip_menu_item"
                  action="assign_trip_action"/>
    </data>
</odoo>