<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id='show_images' model='ir.ui.view'>
            <field name="name">show.images</field>
            <field name='model'>order.line.image</field>
            <field name='arch' type='xml'>
<!--                <tree create="0">-->
<!--                    <field name="image" widget="image"/>-->
<!--                </tree>-->

                <kanban create="0">
                    <field name="image" widget="image"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('order.line.image', 'image', record.id.raw_value)"
                                         alt="Avatar"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>
    </data>
</odoo>