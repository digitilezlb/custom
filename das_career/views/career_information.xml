<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="career_information_view_form" model="ir.ui.view">
            <field name="name">career_information_view_form</field>
            <field name="model">career.information</field>
            <field name="arch" type="xml">
                <form string="career_information_form">
                    <sheet>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <field name="company_id"/>
                            <field name="title"/>
                            <field name="description"/>
                            <field name="vacancies_title"/>
                            <field name="vacancies_description"/>
                        </group>
                        <notebook>
                            <page string="Icons">
                                <group>
                                    <group>
                                        <field name="icon1" widget="image"/>
                                        <field name="title1"/>
                                        <field name="description1"/>
                                    </group>
                                    <group>
                                        <field name="icon2" widget="image"/>
                                        <field name="title2"/>
                                        <field name="description2"/>
                                    </group>
                                    <group>
                                        <field name="icon3" widget="image"/>
                                        <field name="title3"/>
                                        <field name="description3"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="career_view_tree" model="ir.ui.view">
            <field name="name">career_view_tree</field>
            <field name="model">career.information</field>
            <field name="arch" type="xml">
                <tree string="about_us_tree">
                    
                    <field name="name"/>
                    
                    <field name="company_id" />
                        
                </tree>
            </field>
        </record>
        <record id="career_info_actions" model="ir.actions.act_window">
            <field name="name">Career Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">career.information</field>
            <!--<field name="res_id">1</field>-->
            <field name="view_mode">tree,form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="career_information_menu_items" name="Career Website Information"
              action="career_info_actions" parent="das_template_settings.career_information_item"/>
    </data>
</odoo>