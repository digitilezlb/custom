<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="splast_form_inherit" model="ir.ui.view">
            <field name="name">res.company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">


                <xpath expr="//notebook" position="inside">

                    <page string="Splash">
                        <group>
                            <group>
                                <field name="restaurant_loader_for_web_app" widget='image' style="width:40%;" />
                                <field name="splash_background_for_mobile_app"  widget='image' style="width:40%;"/>
                            </group>
                        </group>
                    </page>


                </xpath>

            </field>
        </record>



    </data>
</odoo>